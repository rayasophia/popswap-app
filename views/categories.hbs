<div class="row">
    <div class="col-md-12">
          <h1>Categories</h1>
          <div class="button-container">
            <a href="/categories/add" class="btn btn-primary">Add Category</a>
          </div>
          <hr />
          {{#unless categories}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{else}}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr class="table-dark">
                                <th>Category ID</th>
                                <th>Category Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each categories}}
                                <tr>
                                    <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                                    <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                                    <td><a href="/categories/delete/{{this.id}}" class="btn btn-outline-danger">Remove</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{/unless}}
    </div>
</div>