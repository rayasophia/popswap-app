  <form method="post" action="/categories/add">
    <fieldset>
      <h1>Add Category</h1>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label class="form-label mt-4" for="category">Category:</label>
            <input class="form-control" id="category" name="category" type="text" autofocus/>
