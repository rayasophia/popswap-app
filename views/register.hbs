<div class="container">
    <h1 class="text-center">Create an Account</h1>
    {{#if successMessage}}
        <div class="alert alert-success">
            <strong>Success:</strong> {{successMessage}}
        </div>
        <a class="btn btn-success pull-right" href="/login">&nbsp;&nbsp;&nbsp;Proceed to Log in&nbsp;&nbsp;&nbsp;</a>
        <br /><br /><br />
    {{else}}
        {{#if errorMessage}}
            <div class="alert alert-danger">
                <strong>Error:</strong> {{errorMessage}}
            </div>
        {{/if}}
        <form action="/register" method="POST">
            <div class="form-group">
                <label class="form-label mt-4" for="userName">User Name</label>
                <input type="text" class="form-control" id="userName" name="userName" placeholder="User Name" required value="{{userName}}">
            </div>
            <div class="form-group">
                <label class="form-label mt-4" for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label class="form-label mt-4" for="password2">Confirm Password</label>
                <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password" required>
            </div>
            <div class="form-group">
                <label class="form-label mt-4" for="email">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
            </div><br />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    {{/if}}
</div>