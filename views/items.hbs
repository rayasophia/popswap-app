<div class="row">
    <div class="col-md-12">
          <h1>Items</h1>
          <div class="button-container">
            <a href="/items/add" class="btn btn-primary">Add Item</a>
          </div>
          <hr />
          {{#unless items}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{else}}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr class="table-dark">
                                <th>Item ID</th>
                                <th>Title</th>
                                <th>Item Date</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Published</th>
                                <th></th> <!-- empty header for remove -->
                            </tr>
                        </thead>
                        <tbody>
                            {{#each items}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.title}}</td>
                                    <td>{{#formatDate this.itemDate}}{{/formatDate}}</td>
                                    <td>{{this.price}}</td>
                                    <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                                    <td>{{this.published}}</td>
                                    <td><a href="/items/delete/{{this.id}}" class="btn btn-outline-danger">Remove</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{/unless}}
    </div>
</div>